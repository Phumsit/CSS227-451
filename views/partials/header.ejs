                <a href="/product" class="navbar-brand px-2">สินค้า</a>

             
                              
                              
                <form class="d-flex" action='/product/search' method="POST">
                  <input class="form-control me-2" type="search" placeholder="ค้นหาสินค้าที่คุณต้องการ" aria-label="Search" name="search">
                  <button class="btn btn-outline-success" type="submit" style="border-color: orange; background-color: orange; color: white;">ค้นหา</button>
                </form>

              <% if(!currentUser) {%>
                <div class="col-md-3 text-end">
                  <button onclick="location.href='/login'" type="button" style="border-color: orange; background-color: orange; color: white;" class="btn btn-outline-primary me-2">เข้าสู่ระบบ</button>
                  <button onclick="location.href='/register'" type="button" style="border-color: orange; background-color: orange;" class="btn btn-primary">ลงทะเบียน</button>
                </div>
              <% } else { %>

                <a class="nav-link" href="/account" style="color: black; font-size: larger; "><strong><%= currentUser.username %></strong></a>
                <a class="nav-link" href="/cart" style="color: black; font-size: x-large;" >ตะกร้า</a>
                <!-- <a class="nav-link" href="/logout">Log out</a> -->
